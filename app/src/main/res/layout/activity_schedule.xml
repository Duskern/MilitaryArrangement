<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michael.militaryarrangement.ScheduleActivity">

    <TextView
        android:text="Start Time :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:id="@+id/starttime"
        android:layout_below="@+id/userinsert"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/startinput"
        tools:text="Type start time"
        android:layout_alignBaseline="@+id/starttime"
        android:layout_alignBottom="@+id/starttime"
        android:layout_alignStart="@+id/userinsert" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/endinput"
        tools:text="Type end time"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/startinput" />

    <TextView
        android:text="End Time :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endtime"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/starttime"
        android:layout_alignParentStart="true" />

    <Button
        android:text="View Arrangement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/viewarrangementbut"
        android:layout_below="@+id/addarrangementbut"
        android:layout_alignStart="@+id/addarrangementbut"
        android:layout_alignEnd="@+id/addarrangementbut" />

    <TextView
        android:text="Username :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:id="@+id/soldieruser"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/userinsert" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/userinsert"
        tools:text="Type username"
        android:layout_marginStart="29dp"
        android:layout_alignBaseline="@+id/soldieruser"
        android:layout_alignBottom="@+id/soldieruser"
        android:layout_toEndOf="@+id/starttime" />

    <TextView
        android:text="ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_in"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/soldieruser"
        android:layout_marginTop="12dp"
        android:layout_alignEnd="@+id/soldieruser" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/insertedid"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="Type ID"
        android:layout_alignBaseline="@+id/id_in"
        android:layout_alignBottom="@+id/id_in"
        android:layout_alignStart="@+id/userinsert"
        android:layout_alignEnd="@+id/userinsert" />

    <Button
        android:text="Add Arrangement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addarrangementbut"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/endinput"
        android:layout_alignEnd="@+id/endinput"
        android:layout_marginEnd="22dp" />

</RelativeLayout>
